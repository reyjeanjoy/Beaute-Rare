<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#FF8BB4"
            android:alpha="0.7"
            android:paddingStart="180dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingTop="90dp"/>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:src="@drawable/light"
            android:background="@null"
            android:layout_marginTop="-100dp"
            android:layout_marginStart="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="290dp"
            app:cardElevation="20dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#FF8BB4">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="180dp"
                android:layout_height="175dp"
                android:layout_marginLeft="-19dp"
                android:scaleType="fitCenter"

                android:background="@null" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/loc"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bag"
                android:layout_marginLeft="100dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/textViewWorkExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:text="GALLERY PORTFOLIO"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewO"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"
             />

        <ImageView
            android:id="@+id/imageViewT"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
           />

        <ImageView
            android:id="@+id/imageViewTh"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:scaleType="centerCrop"
           />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewFo"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
           />
        <ImageView
            android:id="@+id/imageViewFi"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/imageViewS"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewSe"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_marginLeft="-20dp"
            android:scaleType="centerCrop"
         />

        <ImageView
            android:id="@+id/imageViewE"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/imageViewN"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
           />
        </LinearLayout>
    </LinearLayout>
</ScrollView>