<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginStart="-10dp"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/back"
                android:background="@null" />

            <ImageButton
                android:id="@+id/editbuttonn"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginStart="300dp"
                android:layout_marginTop="-25dp"
                android:background="@null"
                android:scaleType="fitStart"
                android:src="@drawable/editpic" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:alpha="0.9"
                android:text="PROFILE"
                android:textColor="#F9337A"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-10dp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="190dp"
                android:layout_height="180dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15dp"
                app:cardElevation="40dp"
                app:cardBackgroundColor="#90FF8BB4">

                <androidx.cardview.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="290dp"
                    android:layout_marginTop="15dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="#FF8BB4">

                    <ImageButton
                        android:id="@+id/uploadImageButton"
                        android:layout_width="190dp"
                        android:layout_height="210dp"
                        android:paddingTop="20dp"
                        android:layout_marginLeft="-6dp"
                        android:layout_marginTop="-30dp"
                        android:scaleType="centerCrop"
                        android:background="@null" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-10dp"
                android:src="@drawable/img" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="First Name"
                android:layout_marginTop="-60dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/Firstname"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Last Name"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/Lastname"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Age"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="280dp"
                android:src="@drawable/img1" />

            <EditText
                android:id="@+id/Age"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="-50dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Birthdate"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/Birthdate"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Address"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/img" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="-40dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:inputType="textEmailAddress"
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:text="Phone Number"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/Phone"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:inputType="phone"
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="ID Type"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/IdType"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="ID Number"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp" />

            <EditText
                android:id="@+id/IdNum"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/text_round"
                android:text=" "
                android:textColor="#4D4B4A"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:enabled="false" />



            <Button
                android:id="@+id/buttonsave"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#e75480"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:letterSpacing="0.2"/>

            <Button
                android:id="@+id/buttoncancel"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="-50dp"
                android:backgroundTint="#AA2F33"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:letterSpacing="0.2"/>

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="LOG OUT"
                android:textSize="15sp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="50dp"
                android:letterSpacing="0.2"
                android:textStyle="bold"
                android:background="@drawable/button" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="-240dp"
                android:src="@drawable/img1" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/img" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
